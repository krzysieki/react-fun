{
  "extends": ["eslint:recommended", "xo/browser", "plugin:react/recommended"],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-useless-constructor": 1,
    "no-console": 1,
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
  }
}
